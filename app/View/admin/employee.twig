{% extends 'main.twig' %}
{% block body %}
  <div class="jumbotron">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
          <a href="/public/admin" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-chevron-left"></span>Tillbaka</a>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 col-xs-6">
          <h2>{{ employee.fname }} {{ employee.sname }}</h2>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
  <div class="list-group">
    <div class="row list-group-item">
      <h3 class="list-group-item-heading text-primary text-move">Denna Veckan</h3>
      {% set daynames = ['Måndag', 'Tisdag', 'Onsdag', 'Torsdag', 'Fredag', 'Lördag', 'Söndag'] %}
      {% for day in daynames %}
      {% if loop.index0 < 4 %}
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6">
        {% else %}
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-6">
          {% endif %}
          <div class="well">
            {% if employee.histogram.weeks[loop.index0] is defined %}
              <p>
                {{ day }} {{ employee.histogram.weeks[loop.index0].hours }}
                :
                {{ employee.histogram.weeks[loop.index0].minutes }}h
              </p>
            {% else %}
              <p>{{ day }} 00:00h</p>
            {% endif %}
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="container">
    <div class="list-group">
      <div class="row list-group-item">
        <h3 class="list-group-item-heading text-primary text-move">Detta Arbetsåret</h3>
        {% set monthnames = ['Januari', 'Februari', 'Mars', 'April', 'Maj', 'Juni', 'Juli', 'Augusti', 'September', 'Oktober', 'November', 'December'] %}
        {% for month in monthnames %}
          <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
            <div class="well">
              {% if employee.histogram.months[loop.index0] is defined %}
                <p>{{ month }} {{ employee.histogram.months[loop.index0].hours }}:{{ employee.histogram.months[loop.index0].minutes }}h</p>
              {% else %}
                <p>{{ month }} 00:00h</p>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}