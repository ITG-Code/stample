{% extends 'main.twig' %}
{% block title %}{{ employee.fname }} {{ employee.sname }}s arbetsstatistik{% endblock %}
{% block body %}
  <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6">
    <a href="/public/admin" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-chevron-left"></span>Tillbaka</a>
  </div>
  <div class="container">
    {% include 'account/histogram.twig' %}
  </div>
  <div class="container">
    <div class="well">
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Instämpling</th>
          <th>Utstämpling</th>
          <th>Antal Timmar</th>
        </tr>
        </thead>
        <tbody>
        {% for shift in shifts %}
          <tr>
            <td>{{ shift.startTime }}</td>
            <td>{{ shift.endTime }}</td>
            <td>{{ shift.hours }}:{{ shift.minutes }}h</td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
{% endblock %}