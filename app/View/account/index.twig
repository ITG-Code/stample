{% extends 'main.twig' %}

{% block body %}
  <div class="container-fluid">
    <div class="jumbotron">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <h1>{{ user.fname }} {{ user.sname }}s stämpelpanel</h1>
          <p class="text-muted">
            {% if user.lastCheck.checkvalue == 0 %}
              Du stämplade in: {{ user.lastCheck.stamp }}
            {% else %}
              Du stämplade ut: {{ user.lastCheck.stamp }}
            {% endif %}
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="well well-sm">
          <div class="pull-left">
            <a href="" class="btn btn-primary">Stuff</a>
          </div>
          <div class="pull-right mtl1 mr1">
            <a href="/public/account/logout" class="btn btn-danger">Logga ut</a>
          </div>
          <div class="pull-right dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><span
                  class="glyphicon glyphicon-cog"></span></button>
            <ul class="dropdown-menu">
              <li><a href="/public/account/settings">Inställningar</a></li>
              {% if user.admin == 1 %}
                <li><a href="/public/admin">Adminpanel</a></li>
              {% endif %}
            </ul>
          </div>
        </div>
      </div>


    </div>
  </div>
  <div class="container">
    <div class="row">
      {% if user.lastCheck.checkvalue == 1 %}
        <a href="/public/account/checkin" class="btn btn-primary btn-lg col-lg-8 col-md-8 col-sm-6 col-xs-6"><h3>Stämpla
            in</h3></a>
      {% else %}
        <a href="/public/account/checkout" class="btn btn-primary btn-lg col-lg-8 col-md-8 col-sm-6 col-xs-6"><h3>
            Stämpla ut</h3></a>
      {% endif %}
    </div>
  </div>

  {% include 'account/histogram.twig' %}
{% endblock %}
